<body>
    <%- include('partials/navbar.ejs')%>
    <div class="container">

        <div class="card formperg">
            <div class="card-header">
                <h3>Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <hr>
                <form method="POST" action="/salvarpergunta">
                    <label for="titulo">Titulo:</label>
                    <input name="titulo" type="text" id="titulo" placeholder="titulo" class="form-control">
                    <br>
                    <label for="descricao">Descrição:</label>
                    <textarea name="descricao" placeholder="descreva sua pergunta aqui!" id="descricao" cols="20" class="form-control" rows="5"></textarea>
                    <br>
                    <input type="submit" value="Perguntar" class="btn btn-success">
                </form>
            </div>
        </div>
        
        
    </div>
  
</body>
